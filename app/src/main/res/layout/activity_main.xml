<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/bg">

    <com.scwang.wave.MultiWaveHeader
        android:id="@+id/waveHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rotation="180"
        android:layout_marginTop="260dp"
        app:layout_constraintTop_toTopOf="parent"
        app:mwhCloseColor="#5862B1"
        app:mwhStartColor="#424C9A"
        app:mwhWaveHeight="75dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="213dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hospitalize" />

    <TextView
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_marginTop="320dp"
        android:background="@drawable/boxputih"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/layanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Layanan"
        android:layout_marginTop="32dp"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/box" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layanan">

        <ImageButton
            android:id="@+id/bankdarah"
            android:layout_width="174dp"
            android:layout_height="148dp"
            android:background="@null"
            app:srcCompat="@drawable/bankdarah"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton

            android:id="@+id/donordarah"
            android:layout_width="174dp"
            android:layout_height="148dp"
            android:background="@null"
            app:srcCompat="@drawable/donordarah"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/wikidonor"
            android:layout_width="174dp"
            android:layout_height="148dp"
            android:background="@null"
            app:srcCompat="@drawable/wikidonor"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/akun"
            android:layout_width="174dp"
            android:layout_height="148dp"
            android:background="@null"
            app:srcCompat="@drawable/akun"
            tools:ignore="SpeakableTextPresentCheck" />
    </GridLayout>




</androidx.constraintlayout.widget.ConstraintLayout>