<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/rs"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/boxabu"
        tools:ignore="SpeakableTextPresentCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="24dp"
        android:paddingStart="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/rs"
        app:layout_constraintStart_toStartOf="@+id/rs"
        app:layout_constraintTop_toTopOf="@+id/rs"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/rs_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RS Islam Darus Syifa"
            android:textSize="20sp"
            android:textStyle="bold"
        />

        <TextView
            android:id="@+id/rs_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jalan Wakanda 1"
            app:layout_constraintStart_toStartOf="@+id/rs_name"
            app:layout_constraintTop_toBottomOf="@+id/rs_name" />
    </LinearLayout>


