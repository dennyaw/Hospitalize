<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".formbank">

    <TextView
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="659dp"
        android:background="@drawable/boxputih"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/balik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@null"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/panah"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/DonorDarah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="RS Islam Darus Syifa"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/balik"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/rs1"
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:layout_marginTop="24dp"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/box"
        app:srcCompat="@drawable/boxabu"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/teksA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:text="Golongan Darah A"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/rs1"
        app:layout_constraintStart_toStartOf="@+id/rs1"
        app:layout_constraintTop_toTopOf="@+id/rs1"
        app:layout_constraintVertical_bias="0.396" />

    <TextView
        android:id="@+id/kantongA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tersedia 3 kantong"
        app:layout_constraintBottom_toBottomOf="@+id/rs1"
        app:layout_constraintStart_toStartOf="@+id/teksA"
        app:layout_constraintTop_toBottomOf="@+id/teksA"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/A"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/boxmerah"
        android:gravity="center"
        android:text="A"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/rs1"
        app:layout_constraintEnd_toEndOf="@+id/rs1"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="@+id/rs1"
        app:layout_constraintTop_toTopOf="@+id/rs1"
        app:layout_constraintVertical_bias="0.5" />

    <ImageButton
        android:id="@+id/rs2"
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:layout_marginTop="144dp"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/box"
        app:srcCompat="@drawable/boxabu"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/teksAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:text="Golongan Darah AB"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/rs2"
        app:layout_constraintStart_toStartOf="@+id/rs2"
        app:layout_constraintTop_toTopOf="@+id/rs2"
        app:layout_constraintVertical_bias="0.396" />

    <TextView
        android:id="@+id/kantongAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tersedia 3 kantong"
        app:layout_constraintBottom_toBottomOf="@+id/rs2"
        app:layout_constraintStart_toStartOf="@+id/teksAB"
        app:layout_constraintTop_toBottomOf="@+id/teksAB"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/AB"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/boxmerah"
        android:gravity="center"
        android:text="AB"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/rs2"
        app:layout_constraintEnd_toEndOf="@+id/rs2"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="@+id/rs2"
        app:layout_constraintTop_toTopOf="@+id/rs2"
        app:layout_constraintVertical_bias="0.5" />

    <ImageButton
        android:id="@+id/kontak"
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:layout_marginTop="428dp"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/box"
        app:srcCompat="@drawable/boxabu"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/notelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="+62 893 459 112"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/kontak"
        app:layout_constraintStart_toStartOf="@+id/kontak"
        app:layout_constraintTop_toTopOf="@+id/kontak"
        app:layout_constraintVertical_bias="0.197" />

    <TextView
        android:id="@+id/alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Jl Wakanda 1"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/kontak"
        app:layout_constraintStart_toStartOf="@+id/kontak"
        app:layout_constraintTop_toBottomOf="@+id/notelp"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/telp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        app:layout_constraintStart_toStartOf="@+id/kontak"
        app:layout_constraintTop_toBottomOf="@+id/kontak"
        app:srcCompat="@drawable/telepon"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="@+id/kontak"
        app:layout_constraintTop_toBottomOf="@+id/kontak"
        app:srcCompat="@drawable/map"
        tools:ignore="SpeakableTextPresentCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>